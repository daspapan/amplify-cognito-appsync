{
  "name": "infra",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:synth": "cdk synth",
    "codegen": "cd lib/api && npx @aws-amplify/cli codegen && cd ../..",
    "build:resolvers": "node utils/build.mjs",
    "predeploy": "npm run codegen && npm run build:resolvers",
    "deploy": "npx aws-cdk deploy",
    "predeploy:local": "npm run codegen && npm run build:resolvers",
    "deploy:local": "npx aws-cdk deploy --profile fsps-cdk-admin --outputs-file output.json"
  },
  "devDependencies": {
    "@types/git-branch": "^2.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.9",
    "aws-cdk": "2.148.0",
    "esbuild": "^0.23.0",
    "glob": "^10.4.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.3"
  },
  "dependencies": {
    "@aws-appsync/utils": "^1.8.0",
    "@aws-cdk/aws-amplify-alpha": "^2.148.0-alpha.0",
    "@aws-cdk/aws-cognito-identitypool-alpha": "^2.148.0-alpha.0",
    "aws-cdk-lib": "2.148.0",
    "constructs": "^10.0.0",
    "git-branch": "^2.0.1",
    "source-map-support": "^0.5.21"
  }
}
